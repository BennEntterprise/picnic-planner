{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "format": {
            "dependsOn": [
                "^format"
            ]
        },
        "format:check": {
            "dependsOn": [
                "^format:check"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ],
            "outputs": [
                "coverage/**"
            ]
        }
    }
}